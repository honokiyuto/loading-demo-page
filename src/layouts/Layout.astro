---
import { SidebarLayoutMain } from '@/components/layouts/SideBarLayout/sidebar-layout';
import '../styles/global.css';

const { pathname } = Astro.url;
const pathnameForTitle = pathname.split('/')?.[2] || 'home';
const pathnameForSidebar = pathname.split('/').slice(0, -1).join('/');
const subTitle =
  pathnameForTitle.charAt(0).toUpperCase() + pathnameForTitle.slice(1);
const subTitleWithoutHyphen = subTitle.replace(/-/g, ' ');
const basePath = import.meta.env.BASE_URL;
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches
      ? 'dark'
      : 'light';
  };
  const isDark = getThemePreference() === 'dark';
  document.documentElement.classList[isDark ? 'add' : 'remove']('dark');

  if (typeof localStorage !== 'undefined') {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ['class'],
    });
  }
</script>

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1.0,maximum-scale=1.0"
    />
    <link rel="icon" type="image/svg+xml" href={`${basePath}/favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:url" content={`${basePath}${pathname}`} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`Loading Demo | ${subTitleWithoutHyphen}`} />
    <meta property="og:description" content="ローディング画面比較のデモページ" />
    <meta property="og:site_name" content="Loading Demo" />
    <meta property="og:image" content={`${basePath}/ogp.png`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`Loading Demo | ${subTitleWithoutHyphen}`} />
    <meta name="twitter:description" content="ローディング画面比較のデモページ" />
    <meta name="twitter:image" content={`${basePath}/ogp.png`} />
    <title>{`Loading Demo | ${subTitleWithoutHyphen}`}</title>
  </head>
  <body>
    <SidebarLayoutMain pathname={pathnameForSidebar} client:load>
      <slot />
    </SidebarLayoutMain>
  </body>
</html>
